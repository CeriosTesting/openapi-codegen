{
	"name": "@cerios/openapi-to-typescript",
	"version": "0.0.0",
	"author": "Ronald Veth - Cerios",
	"description": "Generate TypeScript types from OpenAPI specifications",
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"keywords": ["openapi", "typescript", "types", "codegen", "code-generation", "swagger", "api", "cerios"],
	"bin": {
		"openapi-to-typescript": "./dist/cli.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": ["dist"],
	"type": "commonjs",
	"sideEffects": false,
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"bugs": {
		"url": "https://github.com/CeriosTesting/openapi-to-typescript/issues"
	},
	"homepage": "https://github.com/CeriosTesting/openapi-to-typescript#readme",
	"scripts": {
		"build": "tsup",
		"compile": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome lint ./src",
		"format": "biome format --write ./src",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@cerios/openapi-core": "workspace:*",
		"commander": "^14.0.2",
		"cosmiconfig": "^9.0.0",
		"prompts": "^2.4.2",
		"yaml": "^2.8.2",
		"zod": "^4.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@types/node": "^25.0.2",
		"@types/prompts": "^2.4.9",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CeriosTesting/openapi-to-typescript.git",
		"directory": "packages/openapi-to-typescript"
	}
}
