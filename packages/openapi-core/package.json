{
	"name": "@cerios/openapi-core",
	"version": "0.0.0",
	"author": "Ronald Veth - Cerios",
	"description": "Core utilities for parsing and processing OpenAPI specifications. Shared foundation for OpenAPI code generators.",
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"keywords": ["openapi", "parser", "typescript", "schema", "api", "yaml", "core", "cerios"],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": ["dist"],
	"type": "commonjs",
	"sideEffects": false,
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},

	"bugs": {
		"url": "https://github.com/CeriosTesting/openapi-to-zod/issues"
	},
	"homepage": "https://github.com/CeriosTesting/openapi-to-zod#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CeriosTesting/openapi-to-zod.git",
		"directory": "packages/openapi-core"
	},
	"scripts": {
		"build": "tsup",
		"check": "biome check --write",
		"check-exports": "attw --pack .",
		"compile": "tsc --noEmit",
		"dev": "tsup --watch",
		"lint": "biome lint",
		"pack": "pnpm pack --pack-destination=../..",
		"test": "vitest run"
	},
	"dependencies": {
		"cosmiconfig": "^9.0.0",
		"esbuild": "^0.27.1",
		"minimatch": "^10.1.1",
		"yaml": "^2.8.2",
		"zod": "^4.2.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@biomejs/biome": "2.3.9",
		"@types/node": "^25.0.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	}
}
